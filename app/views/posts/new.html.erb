<h3>スケジュール新規作成</h3>
 
<%= form_with model: @post do |f| %>

  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :starting_date ,"開始日" %></th>
      <td><%= f.date_field :starting_date %></td>
    </tr>

    <tr>
      <th><%= f.label :ending_date ,"終了日" %></th>
      <td><%= f.date_field :ending_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day %></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"メモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
  
<% end %>