<h1>スケジュール管理アプリ</h1>

<h3>スケジュール一覧</h3>
<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>
 
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
      <th>作成日</th>
      <th>参照</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.starting_date %></td>
        <td><%= post.ending_date %></td>
        <td>
          <% if post.all_day %>
            ◯
          <% else %>

          <% end %>

        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "参照", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= button_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_post %></p>
